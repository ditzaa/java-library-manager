<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.librarymanagerapp.SearchBookController">
   <children>
      <TextField fx:id="textFieldSearchBook" layoutX="165.0" layoutY="64.0" prefHeight="25.0" prefWidth="297.0" />
