<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.librarymanagerapp.GenerateReportsController">
   <children>
      <AnchorPane id="anchorPaneMainMenu" prefHeight="600.0" prefWidth="200.0">
         <Button fx:id="buttonViewReports" layoutX="42.0" layoutY="350.0" mnemonicParsing="false" onAction="#onReportsMenu" prefHeight="30.0" prefWidth="119.0" styleClass="menuButton" text="Rapoarte" />
         <Button fx:id="buttonRemoveBook" layoutX="42.0" layoutY="300.0" mnemonicParsing="false" onAction="#switchToRemoveBookScene" prefHeight="30.0" prefWidth="119.0" text="Șterge carte" />
         <Button fx:id="buttonAddBook" layoutX="42.0" layoutY="251.0" mnemonicParsing="false" onAction="#switchToAddBookScene" prefHeight="30.0" prefWidth="119.0" text="Adaugă carte" />
         <Button fx:id="buttonSearchBook" layoutX="42.0" layoutY="199.0" mnemonicParsing="false" onAction="#onBookSearchSwitch" prefHeight="30.0" prefWidth="119.0" text="Caută carte" />
      </AnchorPane>
      <Label layoutX="500.0" layoutY="38.0" styleClass="labelsInput" text="Generare rapoarte" />
      <Button fx:id="buttonAuthorReport" layoutX="410.0" layoutY="156.0" mnemonicParsing="false" onAction="#onAuthorReportClick" prefHeight="25.0" prefWidth="307.0" styleClass="buttonsAddBook" text="Carțile unui anumit autor" />
      <Button fx:id="buttonGenreReport" layoutX="410.0" layoutY="224.0" mnemonicParsing="false" onAction="#onGenreReportClick" prefHeight="25.0" prefWidth="307.0" styleClass="buttonsAddBook" text="Cărți după un anumit gen" />
      <Button fx:id="buttonBorrowDateReport" layoutX="410.0" layoutY="289.0" mnemonicParsing="false" onAction="#onBorrowDateReportClick" prefHeight="25.0" prefWidth="307.0" styleClass="buttonsAddBook" text="Cărți împrumutate la o anumită dată" />
      <Button fx:id="buttonSwitchToMainMenu" layoutX="533.0" layoutY="435.0" mnemonicParsing="false" onAction="#switchToMainMenu" prefHeight="25.0" prefWidth="77.0" styleClass="buttonsAddBook" text="Înapoi" />
      <Button layoutX="410.0" layoutY="346.0" mnemonicParsing="false" onAction="#onTopBorrowedBooksClick" prefHeight="25.0" prefWidth="307.0" styleClass="buttonsAddBook" text="Top 10 cărți împrumutate" />
   </children>
</AnchorPane>
